<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_main_story"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="11dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/main_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:text="@string/text_verification"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_go_content"/>

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_verif"
                            android:paddingVertical="25dp"
                            android:paddingHorizontal="20dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_verif_crest"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:textSize="22dp"
                                android:textColor="@color/black"
                                android:text="Минимальный"
                                android:layout_marginTop="9dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="14dp"
                                android:textFontWeight="400"
                                android:textColor="#666C70"
                                android:lines="2"
                                android:text="Уровень где необходимо подтвердить лицо"
                                android:layout_marginTop="9dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonVerif1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/back_button_gos"
                                android:fontFamily="@font/lato_bold"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="4sp"
                                android:paddingVertical="16dp"
                                android:text="Повысить"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:drawableStart="@drawable/icon_button_gos"
                                app:cornerRadius="17dp"
                                android:layout_marginTop="7dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_verif"
                            android:paddingVertical="25dp"
                            android:paddingHorizontal="20dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_verif_crest"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:textSize="22dp"
                                android:textColor="@color/black"
                                android:text="Стандартный"
                                android:layout_marginTop="9dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="14dp"
                                android:textFontWeight="400"
                                android:textColor="#666C70"
                                android:lines="2"
                                android:text="Уровень где необходимо подтвердить загранпаспорт"
                                android:layout_marginTop="9dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonVerif2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/back_button_gos"
                                android:fontFamily="@font/lato_bold"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="4sp"
                                android:paddingVertical="16dp"
                                android:text="Повысить"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:drawableStart="@drawable/icon_button_gos"
                                app:cornerRadius="17dp"
                                android:layout_marginTop="7dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="360dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_verif"
                            android:paddingVertical="25dp"
                            android:paddingHorizontal="20dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="18dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/icon_verif_crest"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:textSize="22dp"
                                android:textColor="@color/black"
                                android:text="Расширенный"
                                android:layout_marginTop="9dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="14dp"
                                android:textFontWeight="400"
                                android:textColor="#666C70"
                                android:lines="2"
                                android:text="Уровень где необходимо посетить отделение  “мои документы”"
                                android:layout_marginTop="9dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_about"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/back_button_tint"
                                android:fontFamily="@font/lato_bold"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="4sp"
                                android:paddingVertical="16dp"
                                android:text="Подробнее"
                                android:textColor="@color/back_button_gos"
                                android:textSize="15sp"
                                android:drawableStart="@drawable/icon_button_gos"
                                app:cornerRadius="17dp"
                                android:layout_marginTop="7dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

    <!--            <ImageView-->
    <!--                android:id="@+id/button_verif_1"-->
    <!--                android:layout_width="match_parent"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:src="@drawable/image_first_verif"-->
    <!--                android:layout_marginTop="11dp"-->
    <!--                android:layout_marginHorizontal="13dp"-->
    <!--                android:adjustViewBounds="true"/>-->

    <!--            <ImageView-->
    <!--                android:id="@+id/button_verif_2"-->
    <!--                android:layout_width="match_parent"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:src="@drawable/image_second_verif"-->
    <!--                android:layout_marginTop="3dp"-->
    <!--                android:layout_marginHorizontal="13dp"-->
    <!--                android:adjustViewBounds="true"/>-->

    <!--            <ImageView-->
    <!--                android:id="@+id/button_verif_3"-->
    <!--                android:layout_width="match_parent"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:src="@drawable/image_third_verif"-->
    <!--                android:layout_marginTop="3dp"-->
    <!--                android:layout_marginHorizontal="13dp"-->
    <!--                android:adjustViewBounds="true"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="26dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:text="@string/text_notification"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_go_content"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_without_notifications"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginBottom="200dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_masha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/image_masha"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            tools:src="@drawable/image_help_masha_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"/>

        <ImageButton
            android:id="@+id/button_next_masha"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="14dp"
            android:background="@null"
            android:src="@drawable/icon_next_masha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>